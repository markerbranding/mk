<footer>
  <div class="column__2 pad__tb__5">
    <div class="col__left pad__right__5">
      <h3>contacto</h3>
      <h2>Entremos en contacto</h2>
      <ul role="list" class="infoList">
        {% for item in empresa %}
        <li class="flex flex__col">
            <h4>Teléfono</h4>
          <a href="tel:{{ item.brandPhone }}">{{ item.brandPhone }}</a>
        </li>
        <li class="flex flex__col">
            <h4>Correo Electrónico</h4>
          <a href="mailto:{{ item.brandEmail }}">{{ item.brandEmail }}</a>
        </li>
        <li class="flex flex__col">
            <h4>Oficinas</h4>
          <a
            href="{{ item.brandAddressUrl }}"
            target="_blank"
            >{{ item.brandAddress }}</a
          >
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="col__right">
        {% include "form.njk" %}
    </div>
  </div>
  <div class="column__1 listado__x4">
    <div class="footer__column">
      <h2>Mapa del sitio</h2>
      {% include "main-nav-izq.njk" %} {% include "main-nav-der.njk" %}
    </div>
    <div class="footer__column">
      <h2>Desarrollos</h2>
      <ul>
        {% for item in products %}
        <li>
          <a href="/desarrollos/{{ item.slug.current }}">{{ item.title }}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer__column">
      <h2>Síguenos</h2>
      <ul>
        {% for item in social %}
        <li>
          <a href="{{ item.facebook }}" target="_blank">Facebook</a>
        </li>
        <li>
          <a href="{{ item.instagram }}" target="_blank">Instagram</a>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer__column">
      {% for marca in empresa %}
      <a class="logo__footer" href="/">
        <img
          src="{{ marca.footLogo.media.url }}"
          alt="{{ marca.brandName }} - {{ marca.brandIndustry }}"
        />
      </a>
      {% endfor %} {% for item in aviso %}
      <a href="/{{ item.slug.current }}">Aviso de privacidad</a>
      {% endfor %}
    </div>
  </div>
  <div id="inner__footer" class="column__1">
    <span>
      {% for marca in empresa %}
      {{ marca.brandName }}
      {% endfor %} © Todos los derechos reservados | Sitio web creado por
      <a href="https://marker.com.mx" target="_blank">MARKER branding</a>
    </span>
  </div>
</footer>
