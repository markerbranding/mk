<form
    id='form'
    class="column__1 flex__justify__c form"
    method="post"
    action="/submit-form"
    onsubmit="return validateForm()">
    <div class="column__2 width__100 pad__bottom__2">
        <div class="col__left pad__right__5">
            <label for="nombre" class="width__100 pad__bottom__2">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Ingresa tu nombre" class="width__100 pad__all__2 " required>
        </div>
        <div class="col__right">
            <label for="telefono" class="width__100 pad__bottom__2">Teléfono</label>
            <input
                type="tel"
                id="telefono"
                name="telefono"
                placeholder="Ingresa tu teléfono"
                class="width__100 pad__all__2 "
                required>
        </div>
    </div>
    <div class="column__2 width__100 pad__bottom__2">
        <div class="col__left pad__right__5">
            <label for="email" class="width__100 pad__bottom__2">Correo electrónico</label>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Ingresa tu correo electrónico"
                class="width__100 pad__all__2 "
                required>
        </div>
        <div class="col__right">
            <label for="ciudad" class="width__100 pad__bottom__2">Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" placeholder="Ingresa tu ciudad" class="width__100 pad__all__2 " required>
        </div>
    </div>
    <div class="column__2 width__100 pad__bottom__2">
        <div class="col__left pad__right__5">
            <label for="desarrollo-interes" class="width__100 pad__bottom__2">Desarrollo de interés</label>
            <select id="desarrollo-interes" name="desarrollo-interes" class="width__100 pad__all__2 " required>
                <option value="">Selecciona una opción</option>
                <option value="opcion1">Opción 1</option>
                <option value="opcion2">Opción 2</option>
                <option value="opcion3">Opción 3</option>
            </select>
        </div>
        <div class="col__right">
            <label for="etapa-decision" class="width__100 pad__bottom__2">Etapa de decisión</label>
            <select id="etapa-decision" name="etapa-decision" class="width__100 pad__all__2 " required>
                <option value="">Selecciona una opción</option>
                <option value="opcion1">Opción 1</option>
                <option value="opcion2">Opción 2</option>
                <option value="opcion3">Opción 3</option>
            </select>
        </div>
    </div>
    <label for="comentarios" class="width__100 pad__bottom__2">Comentarios (opcional)</label>
    <textarea
        id="comentarios"
        name="comentarios"
        placeholder="Ingresa tus comentarios"
        class="width__100 pad__all__2  pad__bottom__2"></textarea>
    <button
        type="submit"
        class="btn btn__secondary"
        style="margin-top: 20px;"
        >ENVIAR MENSAJE</button>
</form>
<script>
    function validateForm() { // Sanitize user input
        var nombre = document
            .getElementById("nombre")
            .value
            .trim();
        var telefono = document
            .getElementById("telefono")
            .value
            .trim();
        var email = document
            .getElementById("email")
            .value
            .trim();
        var ciudad = document
            .getElementById("ciudad")
            .value
            .trim();
        var desarrolloInteres = document
            .getElementById("desarrollo-interes")
            .value
            .trim();
        var etapaDecision = document
            .getElementById("etapa-decision")
            .value
            .trim();
        var comentarios = document
            .getElementById("comentarios")
            .value
            .trim();
        // Check for script injection
        if (
            /<[^>]+>/.test(nombre) ||
            /<[^>]+>/.test(telefono) ||
            /<[^>]+>/.test(email) ||
            /<[^>]+>/.test(ciudad) ||
            /<[^>]+>/.test(desarrolloInteres) ||
            /<[^>]+>/.test(etapaDecision) ||
            /<[^>]+>/.test(comentarios)
        ) {
            alert("No se permiten etiquetas HTML en los campos del formulario.");
            return false;
        }
        // Submit the form
        return true;
    }
</script>