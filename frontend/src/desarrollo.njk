  const heroBtn = document.querySelector("#section__product__btn__vermas");
  heroBtn.addEventListener("click", () => {
    gsap.to(window, {
      duration: 0.5,
      scrollTo: "#section__main__image",
      ease: "power4.out",
    });
  });
</script>