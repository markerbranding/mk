---
eleventyComputed:
    title: "{{ productos[0].titleseo }}"
    description: "{{ productos[0].descseo }}"
    keywords: "{{ productos[0].keyseo }}"
layout: base.njk
pagination:
  data: collections.productos
  size: 20
  alias: item
permalink: "/desarrollos/" # Para paginación amplia descomentar: permalink: "/productos/{{pagination.pageNumber + 1}}/"
---

<div data-barba="container" data-barba-namespace="productos" data-css="productos" data-js="productos">
  {% for item in productos %}
    <section id="section__hero" class="pad__lr__5">
      <div class="column__2">
        <div class="col__left flex__justify__c pad__right__5 width__45">
          <div class='semiBold'>{{ item.heroH2 | safe }}</div>
        </div>
        <div class="col__right width__55"></div>
      </div>
    </section>
  {% endfor %}

  <section id="section__proyectos" class="anchor pad__lr__10 pad__tb__5">
    <div class="column__1">
        <ul id="listado__desarrollos" role="list">
            {%- for item in pagination.items -%}
                {% include "desarrollo-card.njk" %}
            {%- endfor %}
        </ul>
    </div>
  </section>
  
  <!-- //Usar en caso de requerir paginación: <nav>
      <ul>
        {% if pagination.href.previous %}
          <li><a href="{{ pagination.href.previous }}">Anterior</a></li>
        {% endif %}
        {% for pageNumber in pagination.pages %}
          <li><a href="/productos/{{ pageNumber }}">{{ pageNumber }}</a></li>
        {% endfor %}
        {% if pagination.href.next %}
          <li><a href="{{ pagination.href.next }}">Siguiente</a></li>
        {% endif %}
      </ul>
  </nav> -->
</div>